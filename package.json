{
  "name": "threadle",
  "version": "1.0.0",
  "description": "Cross-discipline Slack translator bot powered by LLM - Helping teams communicate across technical boundaries",
  "main": "dist/server/index.js",
  "types": "dist/server/index.d.ts",
  "bin": {
    "threadle": "./bin/threadle.js",
    "threadle-init": "./bin/threadle-init.js",
    "threadle-start": "./bin/threadle-start.js",
    "threadle-stop": "./bin/threadle-stop.js"
  },
  "files": [
    "dist/",
    "bin/",
    "client/dist/",
    "prisma/",
    "prompts/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:prisma && npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd client && npm run build && cd ..",
    "build:prisma": "prisma generate",
    "prepublishOnly": "npm run build && npm test",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm test && npm run test:e2e",
    "dev": "tsx watch server/index.ts",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky install",
    "pack:test": "npm pack",
    "docker:build": "docker build -t threadle/threadle:latest .",
    "docker:build:version": "docker build -t threadle/threadle:1.0.0 -t threadle/threadle:latest .",
    "docker:run": "docker run -d --name threadle -p 3000:3000 -v threadle-data:/app/data --restart unless-stopped threadle/threadle:latest",
    "docker:stop": "docker stop threadle && docker rm threadle",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "keywords": [
    "slack",
    "bot",
    "translator",
    "llm",
    "ai",
    "communication",
    "jargon",
    "cross-discipline",
    "team-collaboration",
    "openai",
    "anthropic",
    "google-ai"
  ],
  "author": "Threadle Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/threadle/threadle.git"
  },
  "homepage": "https://github.com/threadle/threadle#readme",
  "bugs": {
    "url": "https://github.com/threadle/threadle/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@libsql/client": "^0.15.15",
    "@playwright/test": "^1.56.1",
    "@prisma/adapter-libsql": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "playwright": "^1.56.1",
    "prettier": "^3.2.5",
    "prisma": "^7.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.70.1",
    "@google/generative-ai": "^0.24.1",
    "@slack/bolt": "^4.6.0",
    "@slack/web-api": "^7.12.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/handlebars": "^4.0.40",
    "@types/jsonwebtoken": "^9.0.10",
    "cookie-parser": "^1.4.7",
    "express": "^4.18.3",
    "express-rate-limit": "^8.2.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "openai": "^6.9.1",
    "zod": "^4.1.12"
  }
}
